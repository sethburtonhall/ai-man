---
import { Picture } from "astro:assets";
import Icon from "@/components/Icon.astro";
import Layout from "@/layouts/Layout.astro";
import CursorPulse from "@/components/CursorPulse.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE_TITLE, AIRSTREAM_NAME } from "@/consts";

import aiMan from "@/public/ai-man.jpg";
---

<Layout>
  <div class="stack min-h-screen">
    <Header />

    <main
      class="stack md-px-0 container mx-auto my-6 h-min items-center gap-12 px-4 md:my-0 md:flex-row md:justify-between"
    >
      <div
        class="stack mb-8 items-center text-center text-xl md:mb-0 md:w-2/3 md:items-start md:text-left lg:text-2xl"
      >
        <h1 class="mb-4 text-4xl lg:text-6xl">
          Hello, I am <span class="gradient-text">{SITE_TITLE}</span>
        </h1>
        <p>
          Transmitting from <a href="/mind" class="gradient-text">
            {AIRSTREAM_NAME}
          </a>
        </p>
        <p class="max-w-3xl">
          Combining the <span class="gradient-text"
            >miracle of human ingenuity</span
          >
          with the <span class="gradient-text">power of AI</span> to create the
          <span class="gradient-text">hybrid developer</span> of the future
        </p>

        <div class="flex items-center gap-2">
          <Icon icon="terminalWindow" size="1.5em" gradient />
          <a href="/code" class="gradient-text">
            Explore MainFrame
            <CursorPulse />
          </a>
        </div>
      </div>
      <div class="md:w-1/3">
        <Picture
          src={aiMan}
          alt="AI and Human Collaboration"
          class="m-auto w-4/5 rounded-full md:ml-auto md:mr-0 md:w-full"
        />
      </div>
    </main>

    <Footer />
  </div>
</Layout>
