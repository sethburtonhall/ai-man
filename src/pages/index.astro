---
import { Picture } from "astro:assets";
import Icon from "@/components/Icon.astro";
import Layout from "@/layouts/Layout.astro";
import CursorPulse from "@/components/CursorPulse.astro";
import { SITE_TITLE, AIRSTREAM_NAME } from "@/consts";

import aiMan from "@/public/assets/ai-man.jpg";
---

<Layout>
  <main
    class="stack container mx-auto my-6 h-min items-center gap-12 px-6 md:my-0 md:flex-row md:justify-between"
  >
    <div
      class="stack mb-8 items-center text-center text-xl md:mb-0 md:w-2/3 md:items-start md:text-left lg:text-2xl"
    >
      <h1 class="mb-4 text-4xl lg:text-6xl">
        I am <span class="gradient-text">{SITE_TITLE}</span>
      </h1>
      <p>
        Transmitting from <a href="/mind" class="gradient-text">
          {AIRSTREAM_NAME}
        </a>
      </p>
      <p class="max-w-3xl">
        Combining the miracle of human ingenuity with the power of AI to create
        the
        <span class="gradient-text">Hybrid Developer</span> of the future
      </p>

      <div class="flex items-end gap-2">
        <Icon icon="terminalWindow" size="1.5em" gradient />
        <a href="/code" class="gradient-text"> Access ChronoLog</a>
        <CursorPulse class="text-4xl" />
      </div>
    </div>
    <div class="md:w-1/3">
      <Picture
        src={aiMan}
        alt="AI and Human Collaboration"
        class="m-auto w-4/5 rounded-full md:ml-auto md:mr-0 md:w-full"
      />
    </div>
  </main>
</Layout>
