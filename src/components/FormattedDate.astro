---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

Chrono Log: Entry #
<time datetime={date?.toISOString()}>
  {
    date
      .toLocaleDateString("en-us", {
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
      })
      .split("/")
      .reverse()
      .join("-")
  }
</time>
