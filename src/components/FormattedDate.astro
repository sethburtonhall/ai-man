---
interface Props {
  date: Date;
  index?: number;
}

const { date, index } = Astro.props;
---

ChronoLog: Entry #{index !== undefined ? index + 1 : ""}
<time datetime={date?.toISOString()}>
  {
    date
      .toLocaleDateString("en-us", {
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
      })
      .split("/")
      .reverse()
      .join("-")
  }
</time>
